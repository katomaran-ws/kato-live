<div class="blog-left col-md-9 col-sm-9 col-xs-12">

  <% @articles.each do |article| %>
      <div class="blog-content col-md-12 col-sm-12 col-xs-12">
        <p class="blog-details">
          <span class="category"><a href="<%= category_articles_path(category_alias_name: article.category.alias_name) rescue nil %>"><%= article.category.try(:name) %></a></span>
          Posted by: <span><%= article.author %></span><%= ", " + distance_of_time_in_words(Time.now, article.display_date).to_s + " ago" rescue nil %>
        </p>
        <h4>
          <a href="<%= blog_article_path(article_alias_name: article.alias_url) %>"><%= article.title %></a>
        </h4>
        <p><%= article.description %></p>
      </div>
  <% end %>

</div>