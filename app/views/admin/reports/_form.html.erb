<div class="container-block col-md-12 col-sm-12 col-xs-12 no-padding">

  <div class="form-block col-md-12 col-sm-12 col-xs-12 no-padding">
    <div class="container no-padding">
      <div class="row">

        <h2><a class="border"><%= @page_properties[:header] %></a></h2>

        <%= form_for ([:admin, @report]), method: :post, :controller => "admin/reports", :action => @report.new_record? ? :create : :update, :method => @report.new_record? ? "post" : "put", html: { autocomplete: "off", :id => 'article_form' } do |f| %>

            <%#= semantic_form_for ([:admin, @article]),:controller => "admin/articles", :action => @article.new_record? ? :create : :update, :html => {:name => "article", :method => @article.new_record? ? "post" : "put"} do |f| %>
            <%#= f.submit "Create Article", :class => "submit_btn" %>
            <%@name.column_names.sort.each do |field|%>
                <div class="col-md-4 col-sm-6 col-xs-12 check-box">
                  <label><%=field.camelize%></label>
                  <%= custom_check_box_3("report[#{field}]", true,  "article_#{field}", "Yes", "No") %>
                </div>
            <%end%>
            <%= custom_button_1("wayra", "Download") %>
            <!--<button class="button button--wayra" value="Create Article" name="commit"> Submit Article </button>-->
            </div>

        <% end %>

        </div><!--ROW-->
  </div><!--CONTAINER-->
</div><!--SERVICE-BLOCK-->
</div><!--CONTAINER-BLOCK-->
